<EstadoScreen>
    name: "ver_estados"
    BoxLayout:
        Button:
            text: "Crear Nuevo estado"
            on_press: app.crear_nuevo_estado()
        Label:
            color: rgba(1,1,1)
            text: 'this on top'
        

    ScrollView:
        GridLayout:
            id: listado_de_estados
            size_hint: .8,.8 #ancho de input
            size_hint_y: None
            pos_hint: {"center_x":.5,"center_y":.5}
            height: self.minimum_height
            spacing: dp(100) #espacio entre labels
            cols:4
            row_default_height: '48dp'
            row_force_default: True
            padding:[10,10,10,10]
            spacing: 10, 10


<EstadosList@BoxLayout>
    pid: self.pid
    source: self.source
    label: self.label
    size_hint_y: None
    height: "120dp"

    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: None, 1
            text: root.label

        Image:
            size_hint: None, 1
            source: root.source            