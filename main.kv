<screen1>:
    id: elscreen   
<ver_estados>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "sadasdasddas"


NavigationLayout:
    id: todoDeTodo
    container: 'container'
    MDNavigationDrawer:
    	drawer_logo: "cir_transfer.png"
    	NavigationDrawerIconButton:
            text: "Alta Provedores"
            on_release:
                screen_manager.current = "alta_proveedores"
    	NavigationDrawerIconButton:
            text: "Configuraci√≥n"
            on_release:
                screen_manager.current = "configuracion"
        NavigationDrawerIconButton:
            text: "Cargar Estados"
            on_release:
                screen_manager.current = "cargar_estados"
        NavigationDrawerIconButton:
            text: "Ver Estados"
            on_release:
                screen_manager.current = "ver_estados"    
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Jorgeitor"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [['menu', lambda x: root.toggle_nav_drawer()]]
        BoxLayout:
            size_hint: .8,.8
            pos_hint: {"center_x":.5,"center_y":.5}                            
        ScreenManager:
            id: screen_manager
            Screen:
                name: "alta_proveedores"
                Label:
                    text: "Ver Alta Provedores"
            Screen:
                name: "configuracion"
                Label:
                    text: "Ver configuraciones"
            Screen:
                name: "cargar_estados"
                FloatLayout:
                    pos_hint: {"center_x":.5,"center_y":.50}
                    spacing: dp(10) #espacio entre labels
                    orientation: 'vertical'
                    MDLabel:
                        text: "Cargar estados"
                GridLayout:
                    size_hint: .8,.8 #ancho de input
                    pos_hint: {"center_x":.5,"center_y":.5}
                    spacing: dp(10) #espacio entre labels
                    orientation: 'vertical'
                    cols: 4                    
                    TextInput:
                        id: txt_input_nombre_estado
                        hint_text: "Nombre del estado"
                        helper_text: "Ingresar el nombre del estado"
                        #helper_text_mode: "on_focus"
                        required: True
                    #MDTextField: 
                    #    id: "email_dos"
                    #    hint_text: "Email"
                    #    helper_text: "Ingresa tu email papa"
                    #    helper_text_mode: "on_focus"
                    #    required: True
                    BoxLayout:
                        Button:
                            id: 'botonaso'
                            text: "Guardar"
                            on_press: app.guardarEstado(txt_input_nombre_estado.text)                     
            ver_estados:
                name: "ver_estados"
                
                                