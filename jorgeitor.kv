        

NavigationLayout:
    id: todoDeTodo
    container: 'container'
    MDNavigationDrawer:
    	drawer_logo: "cir_transfer.png"
    	NavigationDrawerIconButton:
            text: "Alta Provedores"
            on_release:
                screen_manager.current = "alta_proveedores"
    	NavigationDrawerIconButton:
            text: "Configuraci√≥n"
            on_release:
                screen_manager.current = "configuracion"
        NavigationDrawerIconButton:
            text: "Cargar Estados"
            on_release:
                screen_manager.current = "cargar_estados"
        NavigationDrawerIconButton:
            text: "Ver Estados"
            on_release:
                screen_manager.current = "ver_estados" 
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Jorgeitor"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [['menu', lambda x: root.toggle_nav_drawer()]]
        #BoxLayout: 
            #size_hint: .8,.8
            #pos_hint: {"center_x":.5,"center_y":.5}
        #Button:
        #    text: "asdasdasd"
        ScreenManager:
            id: screen_manager
            Screen:
                name: "alta_proveedores"
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        color: rgba(1,1,1)
                        text: 'this on top'
                    MDLabel:
                        text: 'this right aligned'
                        size_hint_x: None
                        size: self.texture_size
                        pos_hint: {'right': 1}
                    MDLabel:
                        text: 'this on bottom'
            Screen:
                name: "configuracion"
                Label:
                    text: "Ver configuraciones"
            Screen:
                name: "cargar_estados"
                BoxLayout:
                    size_hint: .8,.8 #ancho de input
                    pos_hint: {"center_x":.5,"center_y":.5}
                    spacing: dp(10) #espacio entre labels
                    orientation: 'vertical'
                    MDTextField:
                        id: txt_input_nombre_estado
                        hint_text: "Nombre del estado"
                        helper_text: "Ingresar el nombre del estado"
                        helper_text_mode: "on_focus"
                        required: True
                    BoxLayout:
                        MDRaisedButton:
                            id: 'botonaso'
                            text: "Guardar"
                            size_hint: 0.4, 0.2
                            pos: root.width-self.width, root.height / 2 - self.height / 2
                            on_press: app.guardarEstado(txt_input_nombre_estado.text)
            EstadoScreen:                                
               #:include estados.kv